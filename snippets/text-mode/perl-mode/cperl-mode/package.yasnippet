package ${1:`(let ((package-file (buffer-file-name)))
               (if (string-match "libs?\\\/\\\([a-zA-Z_0-9\\\/]+\\\)\\\.pm$" package-file)
                 (replace-regexp-in-string "/" "::" (match-string 1 package-file))
                  "package_name"))`};

use strict;
use warnings;

sub new {
  my \$class = shift;
  my \$self  = bless { @_ } => \$class;
  \$self
}

$0

1;
